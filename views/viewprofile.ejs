<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="/images/aa.png" rel="shortcut icon"/>
    <script src="/javascripts/profileValidation.js" ></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/styleProfile.css"/>
    <input type="hidden" id="refreshed" value="no">
    <script type="text/javascript">
      onload=function(){
        var e=document.getElementById("refreshed");
        if(e.value=="no")e.value="yes";
        else{e.value="no";location.reload();}
      }
    </script>
  </head>
  <% include header %>
  <title>Home</title>
  <body>
     <% include sideBar %> 
      <div class="right">  
        <div class="intro">
          <div><%= d.personalInfo.firstName.replace(/^./, function(str){ return str.toUpperCase(); }); %></div>
          <div><%= d.designation %></div>
        </div>
        <form name="updateProfile" id="updateProfile" method="post" action="/user/viewprofile">
        <div class="fieldName">
          <h2>Personal information</h2>
          <table class="table">
            <tr>
              <th><input class="edit" type="button" name="edits" value="edit" onclick="edit()"/></th>
            </tr>
            <tr>
              <td>First name:</td>
              <td>
                <input class="input" type="text" id="input" name="firstName" value="<%= d.personalInfo.firstName.replace(/^./, function(str){ return str.toUpperCase(); }); %>" readonly="true"/>
                <span id="firstNameError"  class="errorMessage"></span>
              </td>
            </tr>
            <tr>
              <td>Last name:</td>
              <td>
                <input class="input" type="text" name="lastName" value="<%= d.personalInfo.lastName %>" readonly="true"/>
                <span id="lastNameError"  class="errorMessage"></span>
              </td>
            </tr>
            <tr>
              <td>Email:</td>
              <td><%= d.email %></td>
            </tr>
            <tr>
              <td>Gender:</td>
              <td><%= d.personalInfo.gender %></td>
            </tr>
            <tr>
              <td>Date of birth:</td>
              <td>
                <input class="input" type="date" name="dob" value="<%= d.personalInfo.dob %>" readonly="true"/>
              </td>
            </tr>
            <tr>
              <td>Address:</td>
              <td>
                <textarea class="input" name="address" readonly="true"><%= d.personalInfo.address %></textarea>
                <span id="addressError"  class="errorMessage"></span>
              </td>
            </tr>
            <tr>
              <td>Mobile no:</td>
              <td>
                <input class="input" type="text" name="phNo" value="<%= d.personalInfo.mobileNo %>" readonly="true" onblur="validatePhNo()" id="phNo"/>
                <span id="phNoError"  class="errorMessage"></span>
              </td>
            </tr>
          </table>
        </div>
        <div class="signUpBlock block">
          <input class="signUp" type="button" id="update" value="Update" onclick="validatePersonalForm()" />
        </div>  
      </div>
    </form>  
  </body>
</html>
