<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"> 
    <link href="/images/aa.png" rel="shortcut icon"/>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"/>
    <input type="hidden" id="refreshed" value="no">
    <script type="text/javascript">
      onload=function(){
      var e=document.getElementById("refreshed");
      if(e.value=="no")e.value="yes";
      else{e.value="no";location.reload();}
      }
    </script>
  </head>
  <title>Search</title>
  <% include header %>  
  <body>
    <form method="post" class="searchBar">
      <input class="input"  type="text" name="search" placeholder="Search by name"/>
      <input class="search" type="submit" value="Search" >
        <div>
          <ul>
            <% for(var i=0; i< found.length; i++) { %>
            <a href="/user/search/<%= found[i].id %>">  
              <div class="foundIcon">
                <div>
                  <img src= "/uploads/<%= found[i].imagePath %>" alt="img" class="profilePic" />
                </div>
                <div>
                    <%= found[i].personalInfo.firstName %>
                </div>
              </div>
            </a>  
            <% } %>
          </ul>
        </div>  
      </div>  
    </form>
  </body>
</html>
